{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env":{
    "node": true,
    "browser": false,
    "es6": true
  },
  "rules": {
    "comma-dangle":[2, "never"],
    "spaced-comment": [0],
    "global-require": [0],
    "max-len":[0],
    "no-unused-vars": [0],
    "no-use-before-define": ["error", { "functions": true }],
    "no-nested-ternary": [0],
    "no-empty": [0],
    "no-fallthrough": [0],
    "no-param-reassign": [0],
    "no-console": ["error", { "allow": ["log", "warn", "error"] }],
    "no-constant-condition": [0],
    "no-underscore-dangle": ["error", { "allow": ["_GET", "_POST", "_id"] }],
    "arrow-body-style": [0],
    "semi": [0]
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  }
}
